# ==========================================
# DEX Scanner Configuration
# ==========================================

# ==========================================
# BLOCKCHAIN CONFIGURATION
# ==========================================

# Chain ID - Must match your RPC endpoint
# 1 = Ethereum Mainnet
# 56 = Binance Smart Chain
# 137 = Polygon
# 42161 = Arbitrum
CHAIN_ID=1

# RPC URL - Choose a reliable endpoint
# Free options:
# Ethereum: https://eth.llamarpc.com or https://rpc.ankr.com/eth
# BSC: https://bsc-dataseed1.binance.org
# Polygon: https://polygon-rpc.com
# Note: Some public RPCs don't support WebSocket event filters
RPC_URL=https://eth.llamarpc.com

# ==========================================
# EXPLORER API (for contract verification)
# ==========================================

# Get your API key from:
# Ethereum: https://etherscan.io/apis
# BSC: https://bscscan.com/apis
# Polygon: https://polygonscan.com/apis
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Explorer API URL (v2 for Etherscan, v1 for others)
# Ethereum: https://api.etherscan.io/v2/api
# BSC: https://api.bscscan.com/api
# Polygon: https://api.polygonscan.com/api
ETHERSCAN_API_URL=https://api.etherscan.io/v2/api

# ==========================================
# DEX FACTORY CONTRACT
# ==========================================

# Factory contract address - Must match your chain
# Ethereum Mainnet (Uniswap V2): 0x5C69bEe701ef814a2B6a3EDD4B1652CB9cc5aA6f
# BSC (PancakeSwap V2): 0xcA143Ce32Fe78f1f7019d7d551a6402fC5350c73
# Polygon (QuickSwap): 0x5757371414417b8C6CAad45bAeF941aBc7d3Ab32
# Arbitrum (SushiSwap): 0xc35DADB65012eC5796536bD9864eD8773aBc74C4
FACTORY_ADDRESS=0x5C69bEe701ef814a2B6a3EDD4B1652CB9cc5aA6f

# ==========================================
# TELEGRAM BOT
# ==========================================

# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Get your chat ID by messaging @userinfobot on Telegram
# Can be a user ID or a group/channel ID (starting with -)
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ==========================================
# MONITORING CONFIGURATION
# ==========================================

# How often to poll for new pairs by index (milliseconds)
# Default: 60000 (1 minute)
POLL_INTERVAL=60000

# How often to poll for PairCreated events (milliseconds)
# Default: 30000 (30 seconds)
# Lower values = more real-time but more API calls
EVENT_POLL_INTERVAL=30000

# ==========================================
# RETRY/BACKOFF CONFIGURATION
# ==========================================

# Maximum number of retries for failed API calls
BACKOFF_MAX_RETRIES=5

# Initial delay between retries (milliseconds)
BACKOFF_INITIAL_DELAY=1000

# Maximum delay between retries (milliseconds)
BACKOFF_MAX_DELAY=60000
